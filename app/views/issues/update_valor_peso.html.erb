<style media="screen">
  .container-formulario {
    height: 50px;
    width: 350px;
    margin-bottom: 50px;
  }
  .form-row {
    font-weight: bold;
  }
  .button-form {
  }
  .mensaje-info {
      font-size: 15px;
      padding: 1px;
      width: 500px;
      height: 75px;
      border-style: solid 5px;
      background: white;
      color: #555555;
  }
  img {
    max-width: 100%;
    height: auto;
  }
  .item {
      width: 37px;
      height: 120px;
      height: auto;
      float: left;
      margin: -4px;
      margin-right: 10px;
      padding: 0px;
  }
</style>

<h1> Actualizar los pesos de los indicadores </h1>

<% padre = Issue.find(@issue.parent_id)%>
<% @issues = Issue.where(parent_id: padre.id) %>

<div class="row">
  <div>
    <% @issues.each do |iss| %>
      <%= form_for(iss) do |f| %>
        <div class="container-formulario">
          <div class="form-row">
            <%= "#{iss.subject[0..45]}" %> <br />
            peso:
            <%= f.text_field :valor_peso %>
          </div>
          <div class="button-form">
            <%= f.submit "actualizar", class: "btn btn-primary" %> <br />
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>


<% total = 0 %>

<% @issues.each do |iss| %>
  <%if iss.valor_peso%>
    <% total += iss.valor_peso %>
  <%end%>
<% end %>

<% if total > 100 %>
  <p> Error: los pesos de los indicadores deben sumar 100 </p>
  <p> <%= total-100 %>% extra </p>
<% end %>

<% if total < 100 %>
  <p> Error: los pesos de los indicadores deben sumar 100 </p>
  <p> <strong> faltan <%= (total-100).abs %>% </strong> </p>
<% end %>

<div class="mensaje-info">
  <p>
    <img src='/images/info-icon.png' class="item" />
    <strong>Modifique el peso asociado al indicador que desee y presione su bot√≥n "actualizar"</strong>
  </p>
</div>


